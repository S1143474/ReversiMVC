@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />

<form id="change-password-form" class="account__form" method="post">

    <label class="custom-field user-field">
        <input asp-for="Input.OldPassword"/>
        <span asp-for="Input.OldPassword" class="placeholder">Current Password</span>
        <span class="border"></span>
    </label>

    <label class="custom-field account__form-2-1">
        <input asp-for="Input.NewPassword"/>
        <span asp-for="Input.NewPassword" class="placeholder">New Password</span>
        <span class="border"></span>
    </label>

    <label class="custom-field account__form-2-2">
        <input asp-for="Input.ConfirmPassword"/>
        <span asp-for="Input.ConfirmPassword" class="placeholder">Confirm New Password</span>
        <span class="border"></span>
    </label>

    <button type="submit" class="btn btn-br">Update password</button>

    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
    <div asp-validation-summary="All" class="text-danger"></div>
</form>
