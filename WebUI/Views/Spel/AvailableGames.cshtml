@using System.Diagnostics
@model IEnumerable<Application.Common.Models.Requests.SpelDto>
@{
    ViewData["Title"] = "Reversi";
}

@if (Model != null && Model.Count() != 0)
{
    <div class="speltable">
        <table class="table">
            <thead class="table-head">
                <tr>
                    <th>#</th>
                    <th>Description</th>
                    <th>Play</th>
                </tr>
            </thead>
            <tbody class="table-body">
                @for (int i = 0; i < Model.Count(); i++)
                {
                    var spel = Model.ToList()[i];

                    <tr class="table-row">
                        <td class="table-cell">
                            @(i + 1)
                        </td>
                        <td>
                            @spel.Description
                        </td>
                        <td class="table-cell">
                            <a asp-controller="Spel" asp-action="Reversi" asp-route-id="@spel.Token">
                                <span>
                                    Play
                                    <svg xmlns="http://www.w3.org/2000/svg" height="1em" fill="#eee" viewBox="0 0 384 512"><path d="M73 39c-14.8-9.1-33.4-9.4-48.5-.9S0 62.6 0 80V432c0 17.4 9.4 33.4 24.5 41.9s33.7 8.1 48.5-.9L361 297c14.3-8.7 23-24.2 23-41s-8.7-32.2-23-41L73 39z" /></svg>
                                </span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <h1 class="nothing-found">No available games found. Click <a asp-controller="Spel" asp-action="Create">here</a> to create one.</h1>
}