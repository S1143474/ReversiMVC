@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="create__game__content">
    <h1 class="forgot__password__title"><span class="forgot__password__title__span" text-before="Forgot" text-after="password?"></span>Enter<br/> your email</h1>
    
    <p class="create__game__subtitle">Lost your password? Please enter your email address.<br/> You will receive a link to create a new password via email.</p>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="input__group-button">
            <input class="input__group__text" asp-for="Input.Email" type="email" placeholder=" " required autocomplete="off"/>
                       
            <label asp-for="Input.Email">
                @* <svg class="material-svg" viewBox="0 0 24 24">
                    <path fill="currentColor" d="M22 6C22 4.9 21.1 4 20 4H4C2.9 4 2 4.9 2 6V18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V6M20 6L12 11L4 6H20M20 18H4V8L12 13L20 8V18Z" />
                </svg> *@
                Email
            </label>

            <input class="input__group__button input__btn" type="submit" value="Send"/>
            <p class="foot__note">
                <span asp-validation-for="Input.Email"></span>
            </p>
            @* <label asp-for="Omschrijving" class="control-label"></label>
            <input asp-for="Omschrijving" class="form-control"/>*@
        </div>

        <div class="form-group">
        </div>
    </form>

    <div class="create__game__back">
        <a asp-page="./Login">
            <span class="material-icons">west</span>
            <p>Back to Login</p>
        </a>
    </div>
</div>
